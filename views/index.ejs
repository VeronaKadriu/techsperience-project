<% include partials/header %>

 <div class="container">

    <form class="document_form"  method="POST" action="/documents/add" id="document_form">
<fieldset>

<legend><center><h2><b>Document Form</b></h2></center></legend><br> 


<div class="row">

<div class="col-lg-8 col-lg-offset-5">
<div class="form-group">
  <label for="title">Title:</label>
  <input type="text" name="title" class="form-control" id="title" placeholder="Title" required="">
</div></div></div>


<div class="row">

<div class="col-lg-8 col-lg-offset-2">
<div class="form-group">
  <label for="author">Author:</label>
  <input type="text" name="author" class="form-control" id="author" placeholder="First Name Last Name" required="">
</div> </div>
</div>


<div class="row">

<div class="col-lg-8 col-lg-offset-2">
<div class="form-group">
  <label for="documentno">Document No.:</label>
  <input type="number"  name="documentno" class="form-control" id="documentno" placeholder="Document No." required="">	
  
</div></div>
</div>



<div class="row">

<div class="col-lg-8 col-lg-offset-2">
<div class="form-group">
  <label for="describe">Description:</label>
  <textarea  class="form-control" rows="5" name="description" id="description" placeholder="Describe your file">
  </textarea>
</div></div> </div>


<div class="row">

<div class="col-lg-8 col-lg-offset-2">
<div class="form-group">
  <label for="pl">Physical location:</label>
  <select class="form-control" id="physicallocation" name="physicallocation">
  <OPTION>--select--</option>
    <option>a</option>
    <option>b</option>
    <option>c</option>
  </select>
</div></div> </div>





  <button type="submit"  value="Submit" class="btn btn-large">Submit</button>
  <button type="reset" class="btn btn-large">Reset</button>
  
  
  
<h3> All documents: </h3>

<table border="1"  action="/documents/add" method="post">

<% docs.map( function(doc){%> 

<tr> <th> Title </th>
<th> Author </th> 
<th> Document No </th>
<th> Description </th>
<th> Physical Location </th>

<th> Show </th>
<th> Edit </th>
<th> Delete </th>

</tr>

<tr> <td> <%= doc.title%> </td>
<td> <%= doc.author%> </td>
<td> <%= doc.documentno%> </td>
<td> <%= doc.description%> </td>
<td> <%= doc.physicallocation%> </td>

<td> <a href="/documents/<%= doc._id %>"> Show </a> </td>
<td> <a href="/documents/edit/<%=doc._id %>"> Edit </a></td>
<td> <a href="/documents/delete/<%= doc._id %>"> Delete </a></td>
</tr>

<% }); %>

</table>

<% include partials/footer %>
